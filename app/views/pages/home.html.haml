%section.my-5
  .container
    .d-flex.justify-content-between.align-items-center
      %h2.pb-2
        = t('menu.posts')
      %small
        = link_to t('link.more'), posts_path
    .row
      - @posts.each do |post|
        .col-md-4.col-sm-6.mb-4
          = render post

%section.my-5
  .container
    .d-flex.justify-content-between.align-items-center
      %h2.pb-2
        = t('menu.archives')
      %small
        = link_to t('link.more'), archives_path

    %section
      .row
        - @archives.each do |archive|
          .col-md-4.col-sm-6.mb-4
            = render archive

%section.my-5
  .container
    %h2.pb-2
      = t('menu.tags')
    .mb-4
      - ActsAsTaggableOn::Tag.most_used(15).each do |tag|
        - if tag.taggings_count > 0
          = link_to tag_path(tag), class: 'btn btn-outline-secondary btn-sm mr-2 mb-2' do
            = "#{tag} (#{tag.taggings_count})"

%section.my-5
  .container
    %h2.pb-2
      = t('menu.data_sets')
      %small
        = link_to t('menu.links'), links_path, class: "text-muted"

    .list-group
      = render @data_sets

    .d-flex.justify-content-center.mt-3
      = paginate @data_sets
