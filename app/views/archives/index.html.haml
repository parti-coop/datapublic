%section.py-5
  .container
    .d-flex.justify-content-between.align-items-center
      %h2.pb-2
        = t('menu.archives')
      %small
        - if user_signed_in?
          = link_to t('link.new_archive'), new_archive_path

    %section
      .row
        - 10.times do
          - @archives.each do |archive|
            .col-md-4.col-sm-6.mb-4
              = render archive

    = paginate @archives