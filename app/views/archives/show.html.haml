- set_tags(og_title: "#{@archive.title} 아카이브 - 빠띠 데이터퍼블릭", og_url: archive_link(@archive), og_image: rails_blob_url(@archive.cover))
= render "cover", archive: @archive

%section.py-5
  .container
    %h2.pb-2
      설명
    %p.lead= raw @archive.body

%section.my-5
  .container
    %h3.pb-2
      = t('menu.posts')
    .row
      - @archive.posts.each do |post|
        .col-md-4.col-sm-6.mb-4
          = render post

%section.py-5
  .container
    .d-flex.justify-content-between.align-items-center
      %h2.pb-2
        = t('menu.data_sets')
      %small
        = link_to t('link.new_data_set'), new_data_set_path(archive: @archive)

    .list-group
      = render @data_sets

- if @archive.publisher.present?
  %section.py-5
    .container
      %h2.pb-2
        아카이브 제공

      .border.bg-white.p-3
        = raw @archive.publisher
