%section.py-5.m-0.jumbotron.jumbotron-fluid.bg-transparent.position-relative.d-flex.align-items-center{ style: "width: 100vw; min-height: 50vh; overflow: hidden;" }
  = image_tag archive.cover, class: "img-fluid position-absolute", style: "object-fit: cover; object-position: middle; height: 100%; width: 100%; -webkit-filter: blur(5px); filter: blur(2px);"
  .bg-dark.position-absolute{ style: "width: 100%; height: 100%; opacity: 0.4" }
  .position-absolute.text-center{ style: "bottom: 40px; width: 100%;"}
    .mb-2
      .badge.badge-primary= t('menu.archives')
    %h1.display-4.text-white.font-weight-bold
      = archive.title
    %h4= link_to archive_link(@archive), archive_link(@archive), class: "text-white font-weight-normal"
