%section
  %h5.text-muted= t('menu.tags')
  .mb-4
    - ActsAsTaggableOn::Tag.most_used(15).each do |tag|
      - if tag.taggings_count > 0
        = link_to tag_path(tag), class: 'btn btn-outline-secondary btn-sm mr-2 mb-2' do
          = "#{tag} (#{tag.taggings_count})"

%section
%section
  %h5.text-muted
    최신 #{t('menu.links')}
  .mb-4.list-group
    - Link.limit(20).each do |link|
      = link_to link.data_set, class: "list-group-item list-group-item-action" do
        %h6.my-0= link.title

